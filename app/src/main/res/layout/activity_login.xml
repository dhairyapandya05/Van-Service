<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sbackground"
    tools:context=".login">


    <TextView
        android:id="@+id/Signuptitle"
        android:layout_width="143dp"
        android:layout_height="51dp"
        android:fontFamily="@font/ttnormspromedium"

        android:layout_marginStart="20dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.289" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eEmail"
        android:layout_width="match_parent"
        android:fontFamily="@font/ttnormspromedium"

        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Signuptitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Signuptitle"
        app:layout_constraintTop_toBottomOf="@+id/Signuptitle"
        app:layout_constraintVertical_bias="0.066"
        >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/Email"
            android:paddingLeft="7dp"
            android:hint="Email Address"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:fontFamily="@font/ttnormspromedium"

            android:layout_height="match_parent"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/epassword"
        android:fontFamily="@font/ttnormspromedium"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/eEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eEmail"
        app:layout_constraintTop_toBottomOf="@+id/eEmail"

        app:layout_constraintVertical_bias="0.0">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:fontFamily="@font/ttnormspromedium"

            android:layout_width="match_parent"
            android:hint="Password"
            android:drawablePadding="10dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/REGISTER"
        android:fontFamily="@font/ttnormspromedium"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signinwalla"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:text="New here? Register"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/SignupButton"
        android:layout_width="56dp"
        android:fontFamily="@font/ttnormspromedium"

        android:layout_height="60dp"
        android:layout_below="@+id/epassword"
        android:elevation="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/epassword"

        android:background="@drawable/next_button_bg"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_24"
        android:scaleType="centerCrop"
        android:src="@drawable/forwardbtn"
        android:layout_margin="40dp"
                app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toEndOf="@+id/REGISTER"
        app:layout_constraintTop_toBottomOf="@+id/epassword"
        app:layout_constraintVertical_bias="0.447"
        tools:ignore="SpeakableTextPresentCheck" />

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/eEmail"
        app:layout_constraintEnd_toEndOf="@+id/eEmail"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/eEmail"
        app:layout_constraintTop_toBottomOf="@+id/epassword"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/forgotpassword"
        android:fontFamily="@font/ttnormspromedium"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Forgot Password"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/signinwalla"
        app:layout_constraintStart_toStartOf="@+id/signinwalla"
        app:layout_constraintTop_toBottomOf="@+id/epassword" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/signinwalla"
        android:fontFamily="@font/ttnormspromedium"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/REGISTER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotpassword"
        app:layout_constraintVertical_bias="0.497">
    </com.google.android.gms.common.SignInButton>
</androidx.constraintlayout.widget.ConstraintLayout>