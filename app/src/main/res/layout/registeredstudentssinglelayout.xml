<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:outlineSpotShadowColor="#000000"
        android:outlineAmbientShadowColor="#000000"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="7dp">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shimmerlayout">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginHorizontal="4dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="4dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customername"

            android:ellipsize="end"
            android:textSize="24sp"
            android:maxLines="1"
            android:background="@drawable/shimmerbg"
            android:text="Customername"/>







    </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginHorizontal="3dp"

                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearcity"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:background="@drawable/shimmerbg"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/citytxt"
                        android:textSize="14sp"

                        android:text="City"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/city"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end"

                        android:layout_marginLeft="5dp"
                        android:text="city__"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:id="@+id/linboardingpt"
                    android:background="@drawable/shimmerbg"
android:layout_marginLeft="7dp"
                    android:gravity="left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/boardingpttxt"
                        android:textSize="14sp"


                        android:text="Boarding Pt."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/boardingpt"
                        android:textSize="14sp"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
android:ellipsize="end"
                        android:maxLines="1"
                        android:text="boardpt__"/>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginHorizontal="3dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:background="@drawable/shimmerbg"
android:id="@+id/linemail"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailtxt"
                        android:textSize="14sp"


                        android:text="Email"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/email"
                        android:gravity="left"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:layout_marginLeft="5dp"
                        android:text="abc@gmail.com"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/linmobile"
                    android:layout_weight="1"
                    android:background="@drawable/shimmerbg"

                    android:gravity="left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mobiletxt"
                        android:textSize="14sp"


                        android:text="Mobile"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mobile"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:maxLines="1"
                        android:text="932 432 321"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>