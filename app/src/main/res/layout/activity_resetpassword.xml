    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayoutcurpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="84dp"
        android:hint="Enter your current password"

        app:layout_constraintEnd_toEndOf="@+id/textinputlayoutrepassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textinputlayoutrepassword"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textinputedittextcurpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF3CD"
            android:ems="15"


            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayoutrepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"


        android:hint="Enter your password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textinputlayoutcurpassword"
        app:passwordToggleEnabled="true">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textinputedittextrepassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="15"
            android:background="#FFF3CD"


            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayoutpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"


        android:hint="Re-Enter your new password"
        app:layout_constraintEnd_toEndOf="@+id/textinputlayoutrepassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textinputlayoutrepassword"
        app:layout_constraintTop_toBottomOf="@+id/textinputlayoutrepassword"
        app:passwordToggleEnabled="true">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textinputedittextpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="15"
            android:background="#FFF3CD"


            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="196dp"
        android:textAllCaps="false"
        android:text="Reset"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textinputlayoutpassword"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toStartOf="@+id/textinputlayoutpassword" />

    <Button
        android:id="@+id/emailpasswordreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"


        android:backgroundTint="#00FFFFFF"
        android:textColor="@color/black"
        android:text="Reset password using E-mail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


